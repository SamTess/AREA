# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database
POSTGRES_DB=area
POSTGRES_USER=area_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# Spring Boot
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# JWT Configuration
JWT_SECRET=change_this_to_a_very_long_secure_random_string_min_256_bits
JWT_EXPIRATION=86400000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# Email Service (for user verification)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@area.com
MAIL_PROPERTIES_MAIL_SMTP_AUTH=true
MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true

# Email Verification
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_TOKEN_EXPIRATION=86400000

# ===========================================
# OAUTH PROVIDERS
# ===========================================

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8080/api/auth/github/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=http://localhost:8080/api/auth/microsoft/callback

# ===========================================
# EXTERNAL SERVICES API KEYS
# ===========================================

# Spotify
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Discord
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Slack
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Twitch
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Web Client (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WEB_URL=http://localhost:8081
NEXT_PUBLIC_APP_NAME=AREA

# Mobile Client (Expo)
EXPO_PUBLIC_API_URL=http://localhost:8080
EXPO_PUBLIC_APP_NAME=AREA

# ===========================================
# MONITORING CONFIGURATION
# ===========================================

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_INSTALL_PLUGINS=redis-datasource

# Prometheus
PROMETHEUS_RETENTION_TIME=15d

# ===========================================
# WORKER CONFIGURATION
# ===========================================

# Background Jobs
WORKER_ENABLED=true
WORKER_POOL_SIZE=10
WORKER_QUEUE_CAPACITY=100

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Levels
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_AREA=DEBUG

# Loki
LOKI_URL=http://loki:3100

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# HTTPS (for production)
# SSL_ENABLED=false
# SSL_KEY_STORE=classpath:keystore.p12
# SSL_KEY_STORE_PASSWORD=changeit
# SSL_KEY_STORE_TYPE=PKCS12
# SSL_KEY_ALIAS=tomcat

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Debug Mode
DEBUG=false

# Hot Reload
SPRING_DEVTOOLS_RESTART_ENABLED=false

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=area_db
DB_USER=area_user
DB_PASSWORD=change_me_secure_password

# Backend Configuration
SPRING_APPLICATION_NAME=AREA_Back
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Database Configuration (Spring Boot format)
DATABASE_NAME=${DB_NAME}
DATABASE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}
DATABASE_USERNAME=${DB_USER}
DATABASE_PASSWORD=${DB_PASSWORD}

# JPA Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# Flyway Configuration
FLYWAY_ENABLED=true
FLYWAY_BASELINE_ON_MIGRATE=true

# Security Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_admin_password
ADMIN_ROLES=ADMIN

# JWT Configuration
JWT_ACCESS_SECRET=change_me_jwt_access_secret_at_least_32_chars
JWT_REFRESH_SECRET=change_me_jwt_refresh_secret_at_least_32_chars
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2000ms
REDIS_DATABASE=0
REDIS_POOL_MAX_ACTIVE=8
REDIS_POOL_MAX_IDLE=8
REDIS_POOL_MIN_IDLE=0
REDIS_POOL_MAX_WAIT=-1ms
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Cache Configuration
CACHE_TTL=1800000

# OAuth Configuration (Configure with your OAuth apps)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Frontend Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://production.areaaaaaaaaaaaaaaaaaaa.space
NEXT_PUBLIC_API_URL=https://production.areaaaaaaaaaaaaaaaaaaa.space/api

# Logging Configuration
LOG_LEVEL_APP=INFO
LOG_LEVEL_WEB=INFO
LOG_LEVEL_SECURITY=INFO

# Swagger Configuration
SWAGGER_ENABLED=false
SWAGGER_UI_ENABLED=false
